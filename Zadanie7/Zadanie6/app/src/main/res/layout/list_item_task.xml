<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anroid="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">


    <ImageView
        android:id="@+id/task_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/task_item_padding"
        anroid:ix="@+id/imageView"
        anroid:srcCompat="@drawable/ic_check_box_outline_blank" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_item_name"
            style="@style/TextFieldsStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor" />

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/task_item_date"
            style="@style/TextFieldsStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor" />

        <Space
            android:layout_width="1dp"
            android:layout_height="20dp" />

    </LinearLayout>
</LinearLayout>